{
  "name": "degen-tips-contract",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat ignition deploy ignition/modules/DegenModule.ts --network localhost",
    "deploy:base-goerli": "npx hardhat ignition deploy ignition/modules/DegenModule.ts --network base_goerli",
    "deploy:base-sepolia": "npx hardhat ignition deploy ignition/modules/DegenModule.ts --network base_sepolia",
    "generate-merkle-root:airdrop1": "ts-node scripts/generate-merkle-root.ts --input airdrop/airdrop1.json",
    "generate-merkle-root:example": "ts-node scripts/generate-merkle-root.ts --input airdrop/example.json",
    "node": "npx hardhat node",
    "test": "npx hardhat test",
    "test:report-gas": "REPORT_GAS=true npx hardhat test",
    "verify:token:base-goerli": "npx hardhat verify --network base_goerli 0x88d42b6DBc10D2494A0c6c189CeFC7573a6dCE62 1830297600 ",
    "verify:airdrop:base-goerli": "npx hardhat verify --network base_goerli 0x560B702c38e9d80186b997d4E38B24eFFB478535 0x88d42b6DBc10D2494A0c6c189CeFC7573a6dCE62 0x44324f9ed2c97845d3111542330a178b1eeac1ea384278da29fdb05a35ad12a7 1714521600",
    "verify:token:base-sepolia": "npx hardhat verify --network base_sepolia 0x4ed4E862860beD51a9570b96d89aF5E1B0Efefed 1830297600 ",
    "verify:airdrop:base-sepolia": "npx hardhat verify --network base_sepolia 0x9F07F8A82cB1af1466252e505b7b7ddee103bC91 0x4ed4E862860beD51a9570b96d89aF5E1B0Efefed 0x44324f9ed2c97845d3111542330a178b1eeac1ea384278da29fdb05a35ad12a7 1714521600",
    "wipe:base-goerli": "npx hardhat ignition wipe 'chain-84531' 'DegenModule#DegenAirdrop' && npx hardhat ignition wipe 'chain-84531' 'DegenModule#DegenToken'"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition-ethers": "^0.13.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "chai": "^4.3.10",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.9.1",
    "hardhat": "^2.19.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
