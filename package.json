{
  "name": "degen-tips-contract",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat ignition deploy ignition/modules/DegenModule.ts --network localhost",
    "deploy:base-goerli": "npx hardhat ignition deploy ignition/modules/DegenModule.ts --network base_goerli",
    "generate-merkle-root": "ts-node scripts/generate-merkle-root.ts --input airdrop/airdrop.json",
    "generate-merkle-root:example": "ts-node scripts/generate-merkle-root.ts --input airdrop/example.json",
    "node": "npx hardhat node",
    "test": "npx hardhat test",
    "test:report-gas": "REPORT_GAS=true npx hardhat test",
    "verify:token:base-goerli": "npx hardhat verify --network base_goerli 0x9F07F8A82cB1af1466252e505b7b7ddee103bC91 1735689600",
    "verify:airdrop:base-goerli": "npx hardhat verify --network base_goerli 0x3D5d162b973B4D49391eD2c3dBEe645962668941 0x9F07F8A82cB1af1466252e505b7b7ddee103bC91 0xb1cf927d4e1cbac2bf6de588d7604a88b3cc8c3db561b5cd568ccaf7c6d5c9fa",
    "wipe:base-goerli": "npx hardhat ignition wipe 'chain-84531' 'DegenModule#DegenAirdrop' && npx hardhat ignition wipe 'chain-84531' 'DegenModule#DegenToken'"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition-ethers": "^0.13.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "chai": "^4.3.10",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.9.1",
    "hardhat": "^2.19.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
